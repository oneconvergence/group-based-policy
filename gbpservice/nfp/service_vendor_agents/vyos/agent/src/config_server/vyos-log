/var/log/vyos/vyos_monitor {
        weekly
        rotate 12
        size 10M
        compress
        delaycompress
        missingok
        notifempty
        create 644 vyos users
}
/var/log/vyos/vyos.log {
        monthly
        rotate 12
        size 10M
        compress
        delaycompress
        missingok
        notifempty
        create 644 vyos users
        postrotate
            sudo /etc/init.d/vyos restart
        endscript
}

